<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="css/style.css">
    <title>Company - Login</title>
    <style>

    </style>
</head>

<body>


    <!-- Main Layout -->
    <!-- <div class="d-flex justify-content-center align-items-center vh-100" style="border: 2px solid black;"> -->

    <div class="row m-0 vh-100 vw-100">
        <div class="col-lg-6 pizza-container  p-0">
            <img class="pizza-image" src="/images/dominos_background.jpg" alt="img">
        </div>
        <div class="col-lg-6 p-0 login-container" style=" ">
            <div class="h-100 d-flex flex-column justify-content-center div-login-container">
                <div class=" d-flex justify-content-center align-items-center mb-4 gap-2">
                    <img src="/images/logos/pizzashop_logo.png" class="bg-white1" height="50px" alt="company-logo">
                    <h1 id="pizzashop-header">PIZZASHOP</h1>
                </div>
                <div class=""> <!-- d-flex flex-column align-items-center -->
                    <div class="">
                        <h3 class="white-text">Reset Your Password</h3>
                    </div>
                    <form class="form" action="" method="" class="d-flex flex-column align-items-center">

                        <div class="input-holder">
                            <input type="password" class="form-control my-4" name="" id="newPassword"
                                placeholder="New Password*">
                            <span class="input-icon"><i class="bi bi-eye-slash" id="togglePassword"></i></span>
                        </div>
                        <div class="input-holder">
                            <input type="password" class="form-control my-4" name="" id="cnewPassword"
                                placeholder="Confirm New Password*">
                            <span class="input-icon"><i class="bi bi-eye-slash" id="togglePassword"></i></span>
                        </div>


                        <button type="submit" id="" class="btn btn-primary form-control">Submit</button>
                        <a href="/login.html" class="back-to-login mt-4">Back to login</a>

                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- </div> -->
</body>
<script src="js/bootstrap.bundle.min.js "></script>
<script>
    const togglePassword = document.querySelector('#togglePassword');
    const password = document.querySelector('#password');
    togglePassword.addEventListener('click', () => {
        const type = password.getAttribute('type') === 'password' ? 'text' : 'password';
        password.setAttribute('type', type);
        this.classList.toggle('bi-eye');
    });
</script>

</html>