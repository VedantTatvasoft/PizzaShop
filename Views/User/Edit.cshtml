@{
    Layout = "_Layout";
}
@model Pizzashop_dotnet.Models.UserVModel
<style>
    .input-holder {
        position: relative;
    }

    .input-icon {
        position: absolute;
        right: 10px;
        top: 6px;
    }

    .eye-icon-user {
        position: absolute;
        right: 20px;
        top: 15px;
    }
</style>
<!-- content header  -->


<div class="d-flex  align-items-center justify-content-between">
    <h3 class="text-blue">Edit User</h3>
    <!-- <button class="btn bg-blue text-white" type="submit">+Add User</button> -->
    <a asp-controller="User" asp-action="Index" class="btn bg-blue text-white d-flex align-items-center">Back</a>
</div>


<!-- box with shadow  -->
<div class="bg-white border rounded shadow mt-3 p-3">
    <!-- form  -->
    <form class="form p-3" asp-controller="User" asp-action="Edit" method="POST">
        <div class="row gap-sm-0 gap-3">
            <div class=" form-floating col-sm-6 col-12">
                <input asp-for="Firstname" class="form-control" type="text" id="fname" placeholder="First Name">
                <label asp-for="Firstname" for="fname" class="ms-3">First Name</label>
                <span asp-validation-for="Firstname" class="text-danger"></span>
            </div>
            <div class=" form-floating col-sm-6 col-12">
                <input asp-for="Lastname" class="form-control" type="text" id="lname" placeholder="Last Name">
                <label asp-for="Lastname" for="lname" class="ms-3">Last Name</label>
                <span asp-validation-for="Lastname" class="text-danger"></span>
            </div>
        </div>
        <div class="row my-4 gap-sm-0 gap-3">
            <div class="form-floating col-sm-6 col-12">
                <input asp-for="Username" class="form-control " type="text" id="uname" placeholder="User Name">
                <label asp-for="Username" for="uname" class="ms-3">User Name</label>
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-floating col-sm-6 col-12">
                <select asp-for="Role" asp-items="@ViewBag.Role" id="RoleidDropdown" class="form-select form-control  ">
                    <option value="" selected>-- Select Role --</option>
                </select>
                <label asp-for="Role" for="Roleid" class="ms-3">Role</label>
                <span asp-validation-for="Role" class="text-danger"></span>

            </div>
        </div>
        <div class="row gap-sm-0 gap-3">
            <div class="form-floating col-sm-6 col-12">
                <input asp-for="Email" class="form-control " type="email" id="email" placeholder="Email">
                <label asp-for="Email" for="email" class="ms-3">Email</label>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Password">
            @* <div class="form-floating col-sm-6 col-12">
                <select  class="form-control form-control" ></select>>
                <label  for="status" class="ms-3"></label>
            </div> *@

            <div class="form-floating col-sm-6 col-12">
                <select asp-for="Status" id="status-dropdown" class="form-select form-control" asp-items="Model.StatusList"></select>
                <label asp-for="Status" for="status-dropdown" class="ms-3"></label>
            </div>

        </div>
        <div class="row my-4">
            <div class="">
                <input asp-for="Profileimageurl" type="file" id="fileInput" class="file-input-none">
                <label asp-for="Profileimageurl"
                    class="file-box form-control d-flex flex-column align-items-center justify-content-center "
                    for="fileInput">
                    <img height="20px" src="/img/upload-cloud-svgrepo-com.svg" alt="">
                    <span>Browse files</span>
                </label>
            </div>
        </div>

        <div class="row gap-md-0 gap-3">
            <div class="form-floating col-md-4 col-12">
                <select asp-for="Country" asp-items="@ViewBag.Country" class="form-select form-control"
                    id="countryDropdown">

                </select>
                <label asp-for="Country" for="country" class="ms-3">Country</label>
                <span asp-validation-for="Country" class="text-danger"></span>
            </div>
            <div class="form-floating col-md-4 col-12">
                <select asp-for="State" asp-items="@ViewBag.State" class="form-select form-control" id="stateDropdown">

                </select>
                <label asp-for="State" for="state" class="ms-3">State</label>
                <span asp-validation-for="State" class="text-danger"></span>
            </div>
            <div class="form-floating col-md-4 col-12">
                <select asp-for="City" asp-items="@ViewBag.City" class="form-select form-control" id="cityDropdown">

                </select>
                <label asp-for="City" for="city" class="ms-3">City</label>
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
        </div>
        <div class="row my-4 gap-md-0 gap-3">
            <div class="form-floating col-md-4 col-12">
                <input asp-for="Zipcode" class="form-control" type="text" id="zipcode" placeholder="Zipcode">
                <label asp-for="Zipcode" for="zipcode" class="ms-3">Zipcode</label>
                <span asp-validation-for="Zipcode" class="text-danger"></span>
            </div>
            <div class="form-floating col-md-4 col-12">
                <input asp-for="Address" class="form-control" type="text" id="address" placeholder="Address">
                <label asp-for="Address" for="address" class="ms-3">Address</label>
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-floating col-md-4 col-12">
                <input asp-for="Phone" class="form-control" type="number" id="phone" placeholder="Phone">
                <label asp-for="Phone" for="phone" class="ms-3">Phone</label>
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
        </div>

        <div class="d-flex  row gap-sm-0 gap-3">
            <div class="col-auto text-center">
                <button type="submit" id="" class="btn bg-blue text-white d-flex align-items-center">Save</button>
            </div>
            <div class="col-auto text-center">
                <a asp-controller="User" asp-action="Index"
                    class="blue-outline btn d-flex align-items-center">Cancel</a>
            </div>
        </div>
    </form>
</div>
<!-- finish box-section  -->

<script src="~/js/site.js"></script>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
<script>
    const newtogglePassword = document.querySelector('#newtogglePassword');
    const newPassword = document.querySelector('#newPassword');
    newtogglePassword.addEventListener('click', (event) => {
        const type = newPassword.getAttribute('type') === 'password' ? 'text' : 'password';
        newPassword.setAttribute('type', type);
        if (type === "password") {
            event.target.classList.add("bi-eye-slash");
            event.target.classList.remove("bi-eye")
        }
        else {
            event.target.classList.remove("bi-eye-slash");
            event.target.classList.add("bi-eye")

        }
    });
</script>